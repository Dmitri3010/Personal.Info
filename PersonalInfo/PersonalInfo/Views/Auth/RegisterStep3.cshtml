@using PersonalInfo.Core.Models.Enums
@model PersonalInfo.Core.Models.ViewModel.EducationVM
@{
	ViewData["Title"] = "Register";
}

<h1>Регистрация</h1>
<h4 style="color: #E3E2E2; margin-bottom: 3%">Для доступа к системе вам необходимо пройти процесс регистрации личных данных</h4>
<div class="register-info">
	<div class="container" style="margin-bottom: 3%">
		<div class="row">
			<div class="col-sm-10">
				<div class="row">
					<div class="col-sm step done align-middle">1 этап</div>
					<div class="col-sm step done">2 этап</div>
					<div class="col-sm step">3 этап</div>
					<div class="col-sm step">4 этап</div>
					<div class="col-sm step">5 этап</div>
					<div class="col-sm step">Доступ открыт</div>
				</div>
			</div>
		</div>
	</div>
	<div class="container">
		<form method="post" enctype="multipart/form-data">
			<div class="col-sm-4">
				<label> Образование</label>
				<input type="hidden" name="userId" value="@Model.UserId" />
				<select asp-for="EducationType" asp-items="Html.GetEnumSelectList<EducationType>()"></select>
				<input type="text" asp-for="Qualification" required name="Qualification" placeholder="Квалификация" />
				<input type="text" asp-for="Specialty" required name="Specialty" placeholder="Специальность" />
				<input type="text" asp-for="DateOfGradulation" required name="DateOfGradulation" placeholder="Год выпуска" />
				<label> Должность</label>
				<select asp-for="PositionType" asp-items="Html.GetEnumSelectList<PositionType>()"></select>
				<input type="text" asp-for="WorkTime" required name="WorkTime" placeholder="Опыт работы" />
				<input type="submit" class="btn btn-success" value="Принять">
				<a type="button" class="btn btn-danger" asp-action="RegisterStep2">Отклонить</a>
			</div>
			<div class="col-sm-8" style="background: black">
				<div class="row">
					<div class="form-group">
						<img id="passportImg" width="200" />
						<input type="file" id="DiplomaScan" name="DiplomaScan" asp-for="DiplomaScan" />
						<label>Скан-копия диплома об образовании</label>
					</div>
					<div class="form-group">
						<img id="image_medical" width="200" />
						<input type="file" id="WorkBookScan" name="WorkBookScan" asp-for="WorkBookScan" />
						<label>Скан-копия трудовой книжки</label>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>