@using PersonalInfo.Core.Models.Enums
@model PersonalInfo.Core.Models.Entity.User
@{
	ViewData["Title"] = "Register";
}

<h1>Регистрация</h1>
<h4 style="color: #E3E2E2; margin-bottom: 3%">Для доступа к системе вам необходимо пройти процесс регистрации личных данных</h4>
<div class="register-info">
	<div class="container" style="margin-bottom: 3%">
		<div class="row">
			<div class="col-sm-10">
				<div class="row">
					<div class="col-sm step done align-middle">1 этап</div>
					<div class="col-sm step done">2 этап</div>
					<div class="col-sm done step">3 этап</div>
					<div class="col-sm done step">4 этап</div>
					<div class="col-sm step">5 этап</div>
					<div class="col-sm step">Доступ открыт</div>
				</div>
			</div>
		</div>
	</div>
	<div class="container">
		<form method="post" enctype="multipart/form-data">
			<div class="col-sm-4">
				<label> Анкета работа</label>
				<input type="hidden" name="userId" value="@Model.Id" />
				<input type="text" name="ancet" placeholder="Анкета" />
				<a type="submit" class="btn btn-success" asp-action="RegisterFinish" asp-route-userId="@Model.Id.ToString()">Принять</a>
				<a type="button" class="btn btn-danger" asp-action="RegisterStep4">Назад</a>
			</div>
			<div class="col-sm-8" style="background: black">
				<label> Анкета работа</label>
				<input type="text" name="ancet" placeholder="Анкета" />
			</div>
		</form>
	</div>
</div>